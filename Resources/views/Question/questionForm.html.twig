{% extends 'EguliasQuizBundle::layout.html.twig' %}

{% block extra_js %}
        <script src="{{ asset ('bundles/eguliasquiz/js/question.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
<h1>{% trans %} New Question {% endtrans  %}
<form action="{{ path('egulias_question_save')}}" method="POST" {{ form_enctype(form)}} class="form-stacked">
<div class="clearfix">
  {{ form_label(form.name) }}
  {{ form_errors(form.name) }}
  {{ form_widget(form.name) }}
  <span class="help-block"><strong>{% trans %}Note:{% endtrans %}</strong>{% trans %}The name of the Question that will be shown
when creating a new Quiz{% endtrans %}</span>
</div>
<div class="clearfix">
  {{ form_label(form.text) }}
  {{ form_errors(form.text) }}
  {{ form_widget(form.text) }}
  <span class="help-block"><strong>{% trans %}Note:{% endtrans %}</strong>{% trans %}The question itself. This is what
  will be shown when taking a quiz.{% endtrans %}</span>
</div>
<div class="clearfix">
  {{ form_label(form.type) }}
  {{ form_errors(form.type) }}
  {{ form_widget(form.type) }}
  <span class="help-block"><strong>{% trans %}Note:{% endtrans %}</strong>{% trans %}The type of answer this question
  will spect.{% endtrans %}</span>
</div>
{{ form_widget(form) }}
<button type='submit' class="btn primary">{% trans %}Save Question{% endtrans %}</button>
</form>
{% endblock %}
